<Window x:Class="PivotLayoutLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxpg="http://schemas.devexpress.com/winfx/2008/xaml/pivotgrid"
        Name="mainWindow" Title="WPF demo" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        
        <dxpg:PivotGridControl Margin="10,10,10,10" Name="pivotGrid" ShowColumnGrandTotals="False" Grid.ColumnSpan="2">
        </dxpg:PivotGridControl>
        <Button Name="btnClose" Width="124" Height="24" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Close"
                Grid.Row="1" Margin="0,0,10,10" Click="btnClose_Click"></Button>        
    </Grid>
</Window>
